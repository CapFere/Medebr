@{
    ViewBag.Title = "Medebr - Ethiopian E-Commerce | Home";
    Layout = "_Layout";
}

@model Order
<div class="cart-table-area section-padding-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="checkout_details_area mt-50 clearfix">

                    <div class="cart-title">
                        <h2>Checkout</h2>
                    </div>

                    <form asp-controller="Cart" asp-action="Checkout" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <input type="text" asp-for="FirstName" class="form-control" id="first_name" placeholder="First Name">
                                <span style="color:red; font-size:0.6em;" asp-validation-for="FirstName"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <input type="text" asp-for="LastName" class="form-control" id="last_name" placeholder="Last Name">
                                <span style="color:red; font-size:0.6em;" asp-validation-for="LastName"></span>
                            </div>
                            <div class="col-12 mb-3">
                                <select asp-for="State" class="w-100" id="state">
                                    <option value="Addis Ababa">Addis Ababa</option>
                                    <option value="Harar">Harar</option>
                                    <option value="Tigray">Tigray</option>
                                    <option value="SNNPR">SNNPR</option>
                                    <option value="Afar">Afar</option>
                                    <option value="Oromia">Oromia</option>
                                    <option value="Amhara">Amhara</option>
                                    <option value="Somalia">Somalia</option>
                                    <option value="Gambela">Gambela</option>
                                    <option value="Benshangul">Benshangul</option>
                                </select>
                                <span style="color:red; font-size:0.6em;" asp-validation-for="State"></span>
                            </div>
                            <div class="col-12 mb-3">
                                <input type="text" asp-for="City" class="form-control" id="city" placeholder="City">
                                <span style="color:red; font-size:0.6em;" asp-validation-for="City"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <input type="text" asp-for="Address" class="form-control" id="Address" placeholder="Address">
                                <span style="color:red; font-size:0.6em;" asp-validation-for="Address"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <input type="number" asp-for="PhoneNumber" class="form-control" id="phone_number" min="0" placeholder="Phone No">
                                <span style="color:red; font-size:0.6em;" asp-validation-for="PhoneNumber"></span>
                            </div>
                            <div class="cart-btn mt-100">
                                <input type="submit" class="btn amado-btn w-15" value="Checkout">
                            </div>


                        </div>
                    </form>
                </div>
            </div>            
        </div>
    </div>
</div>